<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:innerRadius="68dp"
            android:shape="ring"
            android:thickness="2dp"
            android:useLevel="false">
            <solid android:color="#E7E0DA" />
        </shape>
    </item>
    <item>
        <shape
            android:innerRadius="74dp"
            android:shape="ring"
            android:thickness="3dp"
            android:useLevel="false">
            <solid android:color="#E7E0DA" />
        </shape>
    </item>
    <item>
        <rotate
            android:fromDegrees="270"
            android:toDegrees="270">
            <shape
                android:innerRadius="80dp"
                android:shape="ring"
                android:thickness="5dp"
                android:useLevel="true">
                <gradient
                    android:angle="45"
                    android:centerColor="#F55555"
                    android:centerY="0.5"
                    android:centerX="0.5"
                    android:endColor="#F55555"
                    android:gradientRadius="20dp"
                    android:startColor="#FCCF31"
                    android:type="linear"/>
            </shape>
        </rotate>
    </item>
</layer-list>